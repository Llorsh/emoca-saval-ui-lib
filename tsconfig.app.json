{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "composite": true
  },
  "include": ["src/index.ts", "src/components/**/*", "src/icons/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/main.tsx",
    "src/App.tsx",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ]
}
